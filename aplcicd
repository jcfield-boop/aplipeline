    log_header "Contest Demonstration"
    
    local apl_demo_code="‚éïFIX'file://src/APLCICD.dyalog'
APLCICD.Initialize
APLCICD.Demo
‚éïOFF"
    
    run_apl "$apl_demo_code" "Contest demonstration"
}


